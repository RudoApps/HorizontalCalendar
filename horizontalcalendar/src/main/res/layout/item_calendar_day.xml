<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/itemDay"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="90dp">

    <TextView android:id="@+id/txtDay"
              android:layout_width="30dp"
              android:layout_height="30dp"
              tools:text="L"
              android:layout_marginBottom="10dp"
              android:gravity="center"
              android:layout_gravity="center"/>


    <RelativeLayout android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center">

        <ImageView android:id="@+id/backDay"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:background="@drawable/circle_number_day"/>

        <TextView android:id="@+id/txtNumDay"
                  android:layout_width="30dp"
                  android:layout_height="30dp"
                  tools:text="16"
                  android:gravity="center"
                  android:textColor="#FFF"/>
    </RelativeLayout>


    <LinearLayout android:id="@+id/circle_selected"
                  android:layout_width="wrap_content"
                  android:layout_height="20dp"
                  android:layout_gravity="center">

        <View android:id="@+id/viewSelected"
              android:layout_width="10dp"
              android:layout_height="10dp"
              android:background="@drawable/circle_selected_day"
              android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>